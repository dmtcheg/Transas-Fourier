<UserControl x:Class="FourierTransas.ChartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FourierTransas"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0">
            <oxy:PlotView Name="Chart0"/>
        </ContentControl>
        <ContentControl Grid.Row="1">
            <oxy:PlotView Name="Chart1"/>
        </ContentControl>
        <ContentControl Grid.Row="2">
            <oxy:PlotView Name="Chart2"/>
        </ContentControl>

        <Button Name="updateButton" Click="Update_Click" Grid.Row="3"/>
    </Grid>
</UserControl>
