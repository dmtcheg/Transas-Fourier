<UserControl x:Class="FourierTransas.ChartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FourierTransas"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" d:DesignHeight="900" d:DesignWidth="1000">
    <UserControl.DataContext>
        <local:FFTModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0">
            <oxy:PlotView Model ="{Binding Plot1}"/>
        </ContentControl>
        <ContentControl Grid.Row="1">
            <oxy:PlotView Model ="{Binding Plot2}"/>
        </ContentControl>
        <ContentControl Grid.Row="2">
            <oxy:PlotView Model ="{Binding Plot3}"/>
        </ContentControl>
    </Grid>
</UserControl>
